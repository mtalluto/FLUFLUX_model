file = {:Users/mtalluto/work/Mendeley/Ottimofiore et al.{\_}2017.pdf:pdf},
issn = {20457758},
journal = {Ecology and Evolution},
keywords = {Indo-Pacific Ocean,climate change,dispersal,species distribution models},
number = {6},
pages = {1996--2005},
title = {{Responses of coral reef fishes to past climate changes are related to life-history traits}},
volume = {7},
year = {2017}
