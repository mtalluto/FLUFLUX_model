keywords = {Black poplar,DOC release,Drought,Flow fragmentation,Habitat heterogeneity,Microbial biomass},
pages = {330--339},
publisher = {Elsevier B.V.},
title = {{Heterogeneity in leaf litter decomposition in a temporary Mediterranean stream during flow fragmentation}},
