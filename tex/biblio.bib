journal = {Journal of Geophysical Research G: Biogeosciences},
keywords = {LIDET,climate,decomposition,exponential model,litter chemistry,reactivity continuum model},
number = {7},
pages = {1196--1214},
title = {{Reactivity continuum modeling of leaf, root, and wood decomposition across biomes}},
volume = {120},
year = {2015}
}
@article{Dieter2011,
